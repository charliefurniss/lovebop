<div class="container">
	<h1>Events</h1>
</div>

<div class="container">
	<!-- if events -->

	{{#if events}}

		{{#each events}}
		<h3>
			{{name}}
		</h3>
		<h4>
			{{location}}
		</h4>
		<h4>
			<!-- {{ date date }} uses handlebars helper where the first is the name of the helper and the second is the key from the db -->
			{{date date}} {{ formatted_start_at }} to {{formatted_end_at}} 
		</h4>
		{{/each}}
	{{else}}
	<!-- else -->
	<h3 class="text-muted">There are no events yet.</h3>
	{{/if}}
</div>