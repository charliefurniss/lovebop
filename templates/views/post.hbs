<div class="main-content-container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="/blog">&larr; back to the blog</a></p>
				<hr>
				<header>
					<h1>{{data.post.title}}</h1>
					<h5 class="post-categories">
						{{{categoryList data.post.categories prefix="Posted in "}}}
						{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</h5>
					<div class="social-links-container">
						<a class="post-social-link"  href="https://twitter.com/intent/tweet?text={{data.post.title}}&url={{data.post.fullPostUrl}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
							<img class="post-social-icon" src="/images/social-twitter.png">
						</a>
						<a class="post-social-link"  href="http://www.facebook.com/sharer/sharer.php?u={{data.post.fullPostUrl}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
							<img class="post-social-icon" src="/images/social-facebook.png">
						</a>
					</div>
				</header>
				<div class="post">
					{{#if data.post.image.secure_url}}
					<div class="hero-image-container">
						<img class="hero-image" src="{{{data.post.image.secure_url}}}"/>
					</div>
					{{/if}}
					{{{data.post.content.extended}}}
				</div>
			</article>
		</div>
	</div>
</div>
